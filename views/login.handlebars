<section class="page-content">
<form id="login" class="form" action="/login" method="post">
  <h2 class="login-h2">Existing User Login</h2>
  <fieldset class="form-div box-shadow">
    <label for="name">Username</label>
    <input type="text" name="name" id="name">
    <label for="pw">Password</label>
    <input type="password" name="pw" id="pw">
    <div class="button-set">
      <button type="submit" class="submit-btn" name="New Session" value="needsSomeValue">Login</button>
      <button type="submit" class="cancel-btn" name="cancel">Cancel</button>
    </div>
  </fieldset>
</form>
<form id="createUser" class="form" action="/create_user" method="post">
  <h2 class="login-h2">New User? Sign Up!</h2>
  <fieldset class="form-div box-shadow">
    <label for="name">Username</label>
    <input type="text" name="name" id="name">
    <label for="name">Email</label>
    <input type="text" name="email" id="email">
    <label for="pw">Password</label>
    <input type="password" name="pw" id="pw">
    <label for="pw">Confirm Password</label>
    <input type="password2" name="pw2" id="pw2">
    <div class="button-set">
      <button type="submit" class="submit-btn" name="New User" value="newUser">Create Account</button>
      <button type="submit" class="cancel-btn" name="cancel">Cancel</button>
    </div>
  </fieldset>
</form>
</section>