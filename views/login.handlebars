{{!-- {{>login_required}} --}}
<section class="page-content">
<form id="login" class="form">
  <h2 class="login-h2">Existing User Login</h2>
  <fieldset class="form-div box-shadow">
    <label for="name">Username</label>
    <input type="text" name="username" id="username">
    <label for="pw">Password</label>
    <input type="password" name="pw" id="pw">
    <div class="button-set">
      <button id="newSessionSubmit" type="submit" class="submit-btn" name="New Session" value="needsSomeValue">Login</button>
      <button type="submit" class="cancel-btn" name="cancel">Cancel</button>
    </div>
  </fieldset>
</form>
<div class="guest-login-div form box-shadow">
  <p>Don't want to sign up? Continue as a <a href="#" id="guestUserLink">'Guest User'</a></p>
</div>
<form id="createUser" class="form">
  <h2 class="login-h2">New User? Sign Up!</h2>
  <fieldset class="form-div box-shadow">
    <label for="username">Username</label>
    <input type="text" name="username" id="new_username">
    <label for="user_email">Email</label>
    <input type="text" name="user_email" id="new_user_email">
    <label for="pw">Password</label>
    <input type="password" name="pw" id="new_pw">
    <label for="pw">Confirm Password</label>
    <input type="password" name="pw2" id="new_pw2">
    <div class="button-set">
      <button id="newUserSubmit" type="submit" class="submit-btn" name="New User" value="newUser">Create Account</button>
      <button type="submit" class="cancel-btn" name="cancel">Cancel</button>
    </div>
  </fieldset>
</form>
</section>
<script src="js/client_login.js"></script>